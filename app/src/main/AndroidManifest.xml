<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keepdiet.android.keepdiet">

    <!-- To auto-complete the email text field in the login form with diaryuser's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_fitness_center_black_24dp"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_fitness_center_black_24dp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserTargetActivity" />
        <activity android:name=".StartGroupActivity" />
        <activity android:name=".SetTarget" />
        <activity android:name=".FindGroupActivity" />
        <activity android:name=".FindGroupResult" />
        <activity android:name=".GroupInformation" />
        <activity android:name=".AddFoodActivity" />
        <activity android:name=".AddExerciseActivity" />
        <activity android:name=".SearchFoodActivity" />
        <activity android:name=".EditFoodActivity" />
        <activity android:name=".EditExerciseActivity"></activity>
    </application>

</manifest>