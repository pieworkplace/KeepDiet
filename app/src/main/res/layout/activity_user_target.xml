
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_diary"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Target"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/toolbar_textsize"/>
    </android.support.v7.widget.Toolbar>

    <!--<ImageView-->
    <!--android:layout_width="50dp"-->
    <!--android:layout_height="50dp"-->
    <!--/>-->

    <TextView
        android:id="@+id/target1"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/ic_event_busy_red_900_36dp"
        android:drawablePadding="0dp"
        android:background="@drawable/txt_rectborder"
        android:text="Eat less than 1800 Cal" />

    <TextView
        android:id="@+id/target2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/ic_event_available_green_600_36dp"
        android:drawablePadding="0dp"
        android:background="@drawable/txt_rectborder"
        android:text="Jogging 5km" />
    <TextView
        android:id="@+id/target3"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:drawableRight="@drawable/ic_event_available_green_600_36dp"
        android:drawablePadding="0dp"
        android:background="@drawable/txt_rectborder"
        android:text="30 push-up" />




</LinearLayout>
