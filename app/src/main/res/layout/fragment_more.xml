<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_diary"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/toolbar_textsize"/>
    </android.support.v7.widget.Toolbar>



    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/account"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:textSize="32sp"
        android:gravity=""
        android:drawableLeft="@drawable/ic_account_circle_black_48dp"
        android:drawablePadding="0dp"
        android:layout_marginTop="5dp"
        android:paddingLeft="8dp"
        android:background="@drawable/txt_radiuborder"
        android:text="  Haoting Li" />

    <TextView
    android:id="@+id/foodEnergy"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:textSize="22sp"
    android:gravity=""
    android:drawableLeft="@drawable/ic_restaurant_black_36dp"
    android:drawablePadding="0dp"
    android:layout_marginTop="5dp"
    android:paddingLeft="8dp"
    android:background="@drawable/txt_rectborder"
    android:text="  Food Energy" />

    <TextView
        android:id="@+id/exerciseEnergy"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:gravity=""
        android:drawableLeft="@drawable/ic_fitness_center_black_36dp"
        android:drawablePadding="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="8dp"
        android:background="@drawable/txt_rectborder"
        android:text="  Exercise Energy" />

    <TextView
        android:id="@+id/findGroup"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:gravity=""
        android:drawableLeft="@drawable/ic_people_black_36dp"
        android:drawablePadding="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="8dp"
        android:background="@drawable/txt_rectborder"
        android:text="  Find Group" />

    <TextView
        android:id="@+id/startGroup"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:gravity=""
        android:drawableLeft="@drawable/ic_exposure_plus_1_black_36dp"
        android:drawablePadding="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="8dp"
        android:background="@drawable/txt_rectborder"
        android:text="  Start Group" />

    <TextView
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:textSize="22sp"
        android:gravity=""
        android:drawableLeft="@drawable/ic_settings_black_36dp"
        android:drawablePadding="0dp"
        android:layout_marginTop="0dp"
        android:paddingLeft="8dp"
        android:background="@drawable/txt_rectborder"
        android:text="  Settings" />


</LinearLayout>

