<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_diary"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Group"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="@dimen/toolbar_textsize"/>
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textGroupName"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:drawablePadding="0dp"
        android:text="Group Name:" />
    <EditText
        android:id="@+id/groupName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="Your Group Name" />
    <TextView
        android:id="@+id/textGroupTarget"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:drawablePadding="0dp"
        android:text="Group Target:" />
    <EditText
        android:id="@+id/groupTarget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="Lose Weight/Build Muscle/..." />
    <TextView
        android:id="@+id/txtGroupLocation"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:drawablePadding="0dp"
        android:text="Group Location:" />
    <EditText
        android:id="@+id/groupLocation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:hint="Specify the Location to City" />
    <TextView
        android:id="@+id/txtMaxMember"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:drawablePadding="0dp"
        android:text="Maximum Group Member" />

    <Spinner
        android:id="@+id/MaxMember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/maxMember"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left" />

    <Button
        android:id="@+id/startGroupButton"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        android:layout_marginTop="30dp"
        android:text="Next Step !" />


</LinearLayout>
